<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputLayout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="helperTextTextColor">@color/error_red</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <style name="search_textInputLayout_style">
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="startIconTint">@color/gray</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/gray_light</item>
        <item name="boxStrokeColor">@color/gray_light</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

</resources>